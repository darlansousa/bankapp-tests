{
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:regression": "cypress run --config specPattern='cypress/e2e/regression/**/*.cy.ts'",
    "test:smoke": "cypress run --config specPattern='cypress/e2e/smoke/**/*.cy.ts'",
    "report:merge": "npx mochawesome-merge reports/mochawesome/*.json > reports/mochawesome/merged.json",
    "report:html": "npx marge reports/mochawesome/merged.json -f index -o reports/mochawesome"
  },
  "devDependencies": {
    "cypress": "^13.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
